<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/splachscreen">
<ImageView
    android:id="@+id/image_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="20dp"
    android:src="@drawable/ic_back"
    android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/text_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_back"
        android:layout_marginTop="16dp"
        android:text="Sign Up"
        android:textSize="30sp"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/text_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_signup"
        android:layout_marginTop="8dp"
        android:text="create your account"
        android:textSize="16sp"
       />
    <LinearLayout
        android:id="@+id/linear_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/image_back"
        app:layout_constraintTop_toBottomOf="@id/text_create">

        <EditText
            android:id="@+id/edit_firstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint=" First name"
            android:padding="16dp" />
        <EditText
            android:id="@+id/edit_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint=" Last name"
            android:padding="16dp" />
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint=" Email"
            android:padding="16dp"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint=" phone"
            android:padding="16dp"
            android:inputType="phone"/>
        <EditText
            android:id="@+id/edit_passward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:hint=" passward"
            android:padding="16dp"
            android:inputType="textPassword"/>


    </LinearLayout>
    <Button
        android:id="@+id/butt_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/linear_signup"
        app:layout_constraintEnd_toEndOf="@id/linear_signup"
        android:background="@drawable/butt_shape"
        app:layout_constraintTop_toBottomOf="@id/linear_signup"
        android:layout_marginTop="16dp"
        android:text="Sign up"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>